<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/dollar"
        android:fontFamily="casual"
        android:text="  0"
        android:textAllCaps="false"
        android:textColor="#41A4D1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.941"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/parent"
        android:layout_width="221dp"
        android:layout_height="56dp"
        android:layout_marginTop="280dp"
        android:backgroundTint="#F6E86D"
        android:drawableLeft="@drawable/vzroslye"
        android:fontFamily="casual"
        android:text="у родителя"
        android:textColor="#41A4D1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/child"
        android:layout_width="221dp"
        android:layout_height="56dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#F6E86D"
        android:drawableLeft="@drawable/children"
        android:fontFamily="casual"
        android:text="у ребёнка"
        android:textColor="#41A4D1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parent" />

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="221dp"
        android:layout_height="56dp"
        android:layout_marginTop="132dp"
        android:backgroundTint="#F6E86D"
        android:drawableLeft="@drawable/question"
        android:fontFamily="casual"
        android:text="о приложении"
        android:textColor="#41A4D1"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/child" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:fontFamily="casual"
        android:text="Приветствуем, у кого сейчас телефон?"
        android:textAllCaps="false"
        android:textColor="#41A4D1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/child"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>